<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/back_mydev">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="#0000"
        android:id="@+id/b_reg"
        android:src="@drawable/ico_back"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="MIS DISPOSITIVOS"
        android:layout_width="wrap_content"
        android:id="@+id/textView1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#900098da"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="390dp"
        android:layout_above="@+id/b_reg"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/dev_coffee"
            android:id="@+id/imageCoffee"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/dev_light"
            android:id="@+id/imageLight"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/imageCoffee"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/dev_stove"
            android:id="@+id/imageStove"
            android:layout_marginBottom="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageCoffee" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/dev_tv"
            android:id="@+id/image"
            android:layout_alignTop="@+id/imageStove"
            android:layout_alignStart="@+id/imageLight" />

        <TextView
            android:text="estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLight"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="#dcffffff"
            android:layout_alignBaseline="@+id/textCoffee"
            android:layout_alignBottom="@+id/textCoffee"
            android:layout_alignStart="@+id/image"
            android:layout_alignEnd="@+id/imageLight" />

        <TextView
            android:text="estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textStove"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="#dcffffff"
            android:layout_below="@+id/image"
            android:layout_alignStart="@+id/imageStove"
            android:layout_alignEnd="@+id/imageStove" />

        <TextView
            android:text="estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCoffee"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="#dcffffff"
            android:layout_below="@+id/imageCoffee"
            android:layout_alignStart="@+id/imageCoffee"
            android:layout_alignEnd="@+id/imageCoffee" />

        <TextView
            android:text="estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTv"
            android:textSize="25sp"
            android:textAlignment="center"
            android:background="#dcffffff"
            android:layout_below="@+id/image"
            android:layout_alignStart="@+id/image"
            android:layout_alignEnd="@+id/image" />


    </RelativeLayout>

</RelativeLayout>